{
  "version": "1.0.0",
  "license": "MIT",
  "name": "moonmail-js-sdk",
  "author": "MoonMail",
  "module": "dist/moonmail.esm.js",
  "main": "dist/index.js",
  "description": "SDK to interact with MoonMail Event and Contacts API",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch --format cjs,esm,umd --name moonmail",
    "build": "tsdx build --format cjs,esm,umd --name moonmail",
    "postbuild": "typedoc src",
    "test": "tsdx test --passWithNoTests --coverage",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "release": "release-it"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint --fix"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "release-it": {
    "git": {
      "tagName": "v${version}",
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "before:init": [
        "yarn lint --fix",
        "CI=true yarn test"
      ]
    }
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-replace": "^2.3.1",
    "@types/jest": "^25.2.1",
    "dotenv": "^8.2.0",
    "husky": "^4.2.3",
    "release-it": "^13.5.2",
    "tsdx": "^0.13.1",
    "tslib": "^1.11.1",
    "typedoc": "^0.17.4",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@types/node-fetch": "^2.5.6",
    "cross-fetch": "^3.0.4"
  }
}
