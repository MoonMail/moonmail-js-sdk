{
  "name": "moonmail-js-sdk",
  "version": "1.0.0",
  "author": "Dmitriy Nevzorov",
  "license": "MIT",
  "source": "src/index.ts",
  "main": "dist/moonmail.js",
  "module": "dist/moonmail.module.js",
  "unpkg": "dist/moonmail.umd.js",
  "amdName": "MoonMail",
  "mangle": {
    "regex": "^_"
  },
  "scripts": {
    "build": "microbundle --external none",
    "dev": "microbundle watch --external none",
    "test": "jest",
    "prepare": "yarn run build",
    "release": "release-it"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "microbundle": "^0.11.0",
    "ts-jest": "^25.4.0",
    "jest": "^25.4.0",
    "deepmerge": "^4.2.2",
    "isomorphic-unfetch": "^3.0.0"
  },
  "dependencies": {},
  "release-it": {
    "git": {
      "tagName": "v${version}",
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "before:init": [
        "CI=true yarn test"
      ]
    }
  }
}
